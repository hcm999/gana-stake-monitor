{
  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/admin", "destination": "/public/admin.html" },
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "builds": [
    {
      "src": "public/**",
      "use": "@vercel/static"
    },
    {
      "src": "api/**",
      "use": "@vercel/node"
    }
  ]
}
